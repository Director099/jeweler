mixin tab-filter({list, listClass, destroy})
  .tab-filter(data-tab-filter="" data-destroy=destroy)&attributes(attributes)
    ul.tab-filter__list(class=listClass)
      each item in list
        li.tab-filter__item
          a.tab-filter__btn(class= `${item.active ? 'active' : ''}` data-btn-filter= item.filter)= item.text
    block
