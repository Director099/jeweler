mixin catalog-menu(pageSubCatalogCurrentHref)
  aside.catalog-menu&attributes(attributes)
    //TODO: Подумать над реализацией
    //+link-icon({
    //  icon: 'icon-arrow',
    //  text: "Назад",
    //}).catalog-menu__back
    ul.catalog-menu__list
      each item, i in catalogMenulist
        - const currentActive = item.href === pageSubCatalogCurrentHref ? "active" : "";
        if (!item.navBarHidden)
          li.catalog-menu__item
            a.catalog-menu__link(href=item.href class=`${currentActive ? "active" : ''}`)
              svg.catalog-menu__icon(width="26" height="24")
                use(href=`img/symbols.svg#icon-subcatalog-${item.icon}`)
              span= item.text

