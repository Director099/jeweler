-
  const listInfoMore = [
    {
      title: 'ТЦ МЕГА',
      address: 'г. Уфа, ул. Рубежная 174',
      time: "Пн-Вс 10:00-22:00",
    },
    {
      title: 'Связаться',
      phone: true,
      wp: 'WhatsApp',
      tg: 'Telegram',
    },
    {
      title: 'Услуги',
      serviceProduct: ['Обмен украшений', 'Скупка']
    },
    {
      title: 'Способ оплаты',
      debitCard: ['Наличные', 'Банковская карта']
    }
  ]

mixin shop-current({title, address, titleMobile="Самовывоз", btnCLoseModal=true, selectProduct=true})
  .shop-current&attributes(attributes)
    .shop-current__header.d-none.d-lg-flex
      +link-icon({
        icon: 'icon-arrow-3',
        widthIcon: 18,
        heightIcon: 18,
      }).shop-current__back(data-close-shop-current="")
      h2.shop-current__header-title К списку магазинов
      if btnCLoseModal
        +link-icon({
          icon: 'icon-close',
          widthIcon: 18,
          heightIcon: 18,
        }).shop-current__close(data-fancybox-close="")
    .shop-current__header.d-lg-none
      +link-icon({
        icon: 'icon-arrow-3',
        widthIcon: 18,
        heightIcon: 18,
      }).shop-current__back(data-fancybox-close="")
      h2.shop-current__header-title= titleMobile
    if selectProduct
      .shop-current__select-product
        .shop-current__body
          section.shop-current__group
            h3.shop-current__title= title
            p.shop-current__address= address
          section.shop-current__group
            h4.shop-current__date Привезем 14 апреля
            .shop-current__row
              .shop-current__img
                img(src="img/content/prev-1.jpg", alt="Золотое кольцо с бриллиантами")
              .shop-current__content
                p Золотое кольцо с бриллиантами
                p 16 размер, 1 шт.
        button.btn.btn--dark.shop-current__btn(data-fancybox-close="") Доставить в этот магазин
    else
      ul.shop-current__list
        each item in listInfoMore
          li.shop-current__item
            +shop-address({
              title: item.title,
              address: item.address,
              time: item.time,
              phone: item.phone,
              wp: item.wp,
              tg: item.tg,
              debitCard: item.debitCard,
              serviceProduct: item.serviceProduct,
              badge: false,
              btnArrow: false
            }).shop-current__address
