mixin modal-address-delivery()
  +modal({
    id: 'modal-address-delivery',
    headerBlock: false
  }).modal-address-delivery
    .modal__header.d-lg-none
      +link-icon({
        icon: 'icon-arrow-3',
        widthIcon: 18,
        heightIcon: 18,
      })(data-fancybox-close="")
    .modal-address-delivery__row
      .modal-address-delivery__btn-toggle.d-lg-none
        button.modal-address-delivery__selected(type="button" data-show-delivery="map")
          svg(width="20" height="26")
            use(href=`img/symbols.svg#icon-point`)
        button.modal-address-delivery__selected.active(type="button" data-show-delivery="content")
          svg(width="22" height="20")
            use(href=`img/symbols.svg#icon-list`)
      .modal-address-delivery__map.d-none.d-lg-block(data-delivery="map")
        iframe(src="https://yandex.ru/map-widget/v1/?um=constructor%3A01fd59d5622493900f4c548c7d3f6064f7cc32ab7f12247796f4e975d87d8d29&amp;source=constructor" width="100%" height="865" )
        button.modal-address-delivery__close-content.d-none.d-lg-block(type="button" data-toggle-delivery="content")
      .modal-address-delivery__content(data-delivery="content")
        button.modal-address-delivery__close.d-none.d-lg-block(data-fancybox-close="" aria-label='Закрыть' type="button")
          svg(width="24" height="24")
            use(href="img/symbols.svg#icon-close")
        +shop-current(data-shop-current="")
        +tab-filter({
          list: [
            {
              text: 'Магазины',
              filter: 'shops',
              active: true
            },
            {
              text: 'Пункты выдачи',
              filter: 'pickup-points'
            }
          ],
          listClass: 'modal-address-delivery__header-filter'
        }).modal-address-delivery__tab-filter
          - for (let i = 0; i <= 1; i++)
            - const currentsTabFilter = !!i ? 'shops' : 'pickup-points';
            .modal-address-delivery__tabs(data-filter=currentsTabFilter)
              ul.modal-address-delivery__list
                each item in addressList
                  li.modal-address-delivery__item
                    +shop-address({
                      title: item.title,
                      address: item.address
                    })
