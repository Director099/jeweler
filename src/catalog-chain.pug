extends pug/layout.pug

block meta
  title= pages.catalogChain.text

block var
  //-Хедер
  - const innerPage = true;
  - const iconBack = pages.index.href;
  - const catalogSearch = true;

  - const headerClass = 'page-header--xs-mb-none';
  - const pageCurrent = pages.catalog.href;

block content
  -
    const categoryChainlist = [
      {
        text: "Все цепи",
        icon: 'main',
      },
      {
        text: "Бисмарк",
        icon: 'bismarck',
      },
      {
        text: "Лав",
        icon: 'love',
      },
      {
        text: "Ромб",
        icon: 'rhombus',
      },
      {
        text: "Якорный",
        icon: 'anchor',
      },
      {
        text: "Сингапур",
        icon: 'singapore',
      },
      {
        text: "Панцирь",
        icon: 'shell',
      },
      {
        text: "Нонна",
        icon: 'nonna',
      },
    ]

  +catalog({
    pageSubCatalogCurrentTitle: pages.catalogChain.text,
    pageSubCatalogCurrentHref: pages.catalogChain.href,
  })
    .promo-list.d-none.d-lg-block
      .promo-list__grid.grid-tpl-1.grid-tpl-xl-2
        - for(let i = 0; i < 2; i++)
          +promo({
            src: `img/content/catalog-actions/action-chain-${i + 1}`,
            title: "sad",
            srcset: true,
            hasContent: false,
          })(href="#")
    .promo-list.d-lg-none
      +promo({
        src: `img/content/catalog-actions/action-chain-1`,
        title: "sad",
        srcset: true,
        hasContent: false,
      })(href="#")
    +category-list({
      classNameGrid: 'grid-tpl-2 grid-tpl-lg-4',
      list: categoryChainlist,
      tplContent: 'category-link',
      isTextHidden: ['Акции', 'Новинки', 'Свадьба']
    })
