block subCatalogVar
  - const catalogFilter = true;
  - const pageSubCatalogCurrentHref = pages.catalogChain.href;
  - const pageSubCatalogCurrentTitle = pages.catalogChain.text;
  -
    const categoryChainlist = [
      {
        text: "Все цепи",
        icon: 'main',
      },
      {
        text: "Бисмарк",
        icon: 'bismarck',
      },
      {
        text: "Лав",
        icon: 'love',
      },
      {
        text: "Ромб",
        icon: 'rhombus',
      },
      {
        text: "Якорный",
        icon: 'anchor',
      },
      {
        text: "Сингапур",
        icon: 'singapore',
      },
      {
        text: "Панцирь",
        icon: 'shell',
