extends pug/layout.pug

block var
  - const pageCurrent = pages.privacyPolicy.href;
  - const sidebar = true;
  - const gridClass = "main-ident__page-info";
  - const pageMainTitle = "Политика конфиденциальности";
  - const classPageMain = "main-ident__title";
  -
    const listPrivacyPolicy = [
      {
        title: "Общие положения",
        tplContent: generalProvisions()
      },
      {
        title: "Персональные данные, которые мы обрабатываем",
        tplContent: personalInformation()
      },
      {
        title: "Цели и сроки обработки данных. Действия, совершаемые с персональными данными",
        tplContent: dataProcessing()
      },
      {
        title: "Cookie-файлы. Аналитические системы",
        tplContent: security(),
      },
      {
        title: "Взаимодействие с нами по вопросам обработки персональных данных",
        tplContent: interaction(),
      },
      {
        title: "Безопасность и конфиденциальность  персональных данных",
        tplContent: security()
      },
      {
        title: "Изменения политики",
        tplContent: policyChanges()
      }
    ]

block meta
  title Политика конфиденциальности

block sidebar
  +navigation-changer(listPrivacyPolicy).d-none.d-xl-block

block content
  +accordion({
    list: listPrivacyPolicy,
    count: true
  }).text-content.stack.gap-40(data-close-inner="")
