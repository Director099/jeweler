extends pug/layout.pug

block var
  - const pageCurrent = pages.bonusRules.href;
  - const pageMainTitle = pages.bonusRules.text;
  -
    const listPagePrivacyPolicy = [
      {
        title: "Общие положения",
        tplContent: generalProvisions()
      },
      {
        title: "Термины и определения",
        tplContent: personalInformation()
      },
      {
        title: "Условия участия в программе",
        tplContent: dataProcessing()
      },
      {
        title: "Начисление бонусов",
        tplContent: security(),
      },
      {
        title: "Списание бонусов в обмен на привилегии",
        tplContent: interaction(),
      },
      {
        title: "Статус участника",
        tplContent: security()
      },
      {
        title: "Иные условия",
        tplContent: policyChanges()
      },
      {
        title: "Разрешение споров по программе",
        tplContent: policyChanges()
      }
    ]


block meta
  title= pageMainTitle

block content
  +main.main-ident
    .container
      // TODO: header-title ? (Нейминг)
      h1.main-ident__title= pageMainTitle
      .main-ident__page-info
        +navigation-changer(listPagePrivacyPolicy).d-none.d-xl-block
        +accordion({
          list: listPagePrivacyPolicy,
          count: true,
          classElement: 'is-active',
          scrollId: true,
        }).accordion--text-content.text-content(data-close-inner="")
