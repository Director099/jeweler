mixin basket
  .basket.page__content
    .container
      +link-icon({
        icon: 'icon-arrow',
        text: "Назад",
        widthIcon: 14,
        heightIcon: 14,
      })(href=pages.index.href).link-back
      h1.basket__title.d-none.d-lg-block Корзина
      +form(action=pages['404'].href).basket__grid
        block
        +total-amount.d-none.d-lg-block
