mixin lk({pageSubCatalogCurrentTitle, pageLkCurrentHref})
  - const pageMainLk = (pages.lk.href !== pageLkCurrentHref) && `d-none d-lg-block`;
  .page-lk.page__content&attributes(attributes)
    .container
      +link-icon({
        icon: 'icon-arrow',
        text: "Назад",
        widthIcon: 14,
        heightIcon: 14,
      })(href=pages.index.href).link-back
      .page-lk__grid
        aside.lk-sidebar.page-lk__sidebar(class=pageMainLk)
          +user({
            img: 'img/content/default-photo-profile.svg',
            name: 'Ильназ',
            status: 'Platinum'
          }).lk-sidebar__user
          +lk-sub-menu
          +lk-menu({
            pageLkCurrentHref: pageLkCurrentHref
          }).d-none.d-lg-block
        main.page-lk__content
          block
