extends pug/layout.pug

block var
  //-Хедер
  - const innerPage = true;
  - const iconBack = pages.lk.href;
  - const catalogTitle = "Служба поддержки";

  - const pageCurrent = pages.lk.href;
  - const pageSidebarCurrent = pages.lkSupport.href

block meta
  title= pages.lkSupport.text

block content
  +lk({
    pageLkCurrentHref: pageSidebarCurrent
  }).page-lk--xs-main-center
    .support
      h1.lk-title.support__title Служба поддержки
      section.support__group
        h2.support__sub-title Напишите нам
        +socials.support__socials
      section.support__group
        h2.support__sub-title Звоните нам с 08:00 до 17:00 МСК по будням (с 11:00 до 12:00 МСК обед)
        a.support__phone(href=numberPhone.href)= numberPhone.text
