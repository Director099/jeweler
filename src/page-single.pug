  - const pageCurrent = pages.catalog.href;
  -
    const review = [
      {
        text: 'Отличное кольцо, жене понравилось!',
        data: 'Сергей Газин, 26 октября 2022'
      },
      {
        text: 'Все понравилось',
        data: 'Андрей Назаров, 11 ноября 2022'
