extends pug/layout.pug

block meta
  title= pages.catalogBracelets.text

block var
  //-Хедер
  - const innerPage = true;
  - const iconBack = pages.index.href;
  - const catalogSearch = true;

  - const headerClass = 'page-header--xs-mb-none';
  - const pageCurrent = pages.catalog.href;

block content
  - const reingsText = `<span class="d-none d-xl-inline-block">браслет</span>`;
  - const listRings = ["Все браслеты", `Цепной  ${reingsText}`, `Сегментарный ${reingsText}`]

  +catalog({
    pageSubCatalogCurrentTitle: pages.catalogBracelets.text,
    pageSubCatalogCurrentHref: pages.catalogBracelets.href,
  })
    .category-list-prev.grid-tpl-1.grid-tpl-xl-3
      each item, i in listRings
        +promo({
          src: `img/content/catalog-jeweler/catalog-bracelet-${i + 1}`,
          title: item,
          hasContent: true,
          srcset: true,
        })(href="#").category-list-prev__link
