extends pug/layout.pug

block var
  - const pageCurrent = pages.basket.href;

block meta
  title= pages.basket.text

block content
  +basket
    ul.basket-products__list
      li.basket-products__item
        +card-product({
          title: 'Кольцо золотое 585 пробы',
          textLinkSize: '16 размер',
          status: 'В наличии',
          src: 'img/content/prev-1.jpg'
        })
    section.basket-products__not-auth
      h1.basket-products__not-auth-title Бонусные баллы (ББ)
      .basket-products__not-auth-desc
        p #[a(class="line-link" href="#") Авторизуйтесь] или #[a(class="line-link" href="#") зарегистрируйтесь], чтобы применить бонусные баллы.


